<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral"
    tools:context="com.example.placarapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Lilas"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:padding="24dp"
                android:text="Home"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/placarTimeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="56sp" />

            <Button
                style="@style/Widget.PlacarApp.Button"
                android:id="@+id/tresPontosA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_teal700"
                android:text="+3 PONTOS"/>

            <Button
                style="@style/Widget.PlacarApp.Button"
                android:id="@+id/doisPontosA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_yellow"
                android:text="+2 PONTOS"/>

            <Button
                style="@style/Widget.PlacarApp.Button"
                android:id="@+id/tiroLivreA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_coral"
                android:text="TIRO LIVRE"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/Cinza">


            <TextView
                android:id="@+id/timeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:padding="24dp"
                android:text="Visitor"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/placarTimeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="56sp"
                android:fontFamily="sans-serif"/>

            <Button
                style="@style/Widget.PlacarApp.Button"
                android:id="@+id/tresPontosB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_teal700"
                android:text="+3 PONTOS"/>

            <Button
                style="@style/Widget.PlacarApp.Button"
                android:id="@+id/doisPontosB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_yellow"
                android:text="+2 PONTOS"/>

            <Button
                style="@style/Widget.PlacarApp.Button"
                android:id="@+id/tiroLivreB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/button_coral"
                android:text="TIRO LIVRE"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        style="@style/Widget.PlacarApp.Button"
        android:id="@+id/reiniciarPartida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gray"
        android:text="REINICIAR PARTIDA"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"/>
</RelativeLayout>